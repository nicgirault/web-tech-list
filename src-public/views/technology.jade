h1 List of web technologies

form(role="form", ng-submit="addTechnology()")
  .input-group
    input.form-control(type="text", ng-model="newTechnology.title", autofocus)
    span.input-group-btn
      button.btn.btn-default(type="submit") Add

div(ng-repeat="technology in technologies")
  form(ng-hide="technology.editing")
    .input-group
      span.input-group-addon {{ technology.random }}
      input.form-control(ng-model="technology._cache.title", ng-dblclick="editingTechnology(technology)", readonly)
      span.input-group-btn
        button.btn.btn-default(ng-click="editingTechnology(technology)") Edit
        button.btn.btn-default(ng-click="removeTechnology(technology)") Remove
  form(ng-submit="editTechnology(technology)", ng-show="technology.editing")
    .input-group
      span.input-group-addon {{ technology.random }}
      input.form-control(ng-model="technology.title")
      span.input-group-btn
        .btn.btn-default(ng-click="cancelEditing(technology)") Cancel
        .btn.btn-default(ng-click="removeTechnology(technology)") Remove
